{% block body %}
    <h1>Prideti automobili</h1>
	<form>
	  <div class="form-group row">
		<label for="automobiliss" class="col-sm-2 col-form-label">Automobilis: </label>
		<div class="col-sm-10">
			<select id="automobilis" class="form-control">
				<option selected>Pasirinkite...</option>					
				<optgroup label="Volkswagen">
					<option value="1">Polo</option>
					<option value="2">Passat</option>			
				</optgroup>
				<optgroup label="Opel">
					<option value="3">Astra</option>
					<option value="4">Vectra</option>			
				</optgroup>		
		  </select>
		</div>
	  </div>
	  <div class="form-group row">
		<label for="valst_nr" class="col-sm-2 col-form-label">Valstybiniai numeriai: </label>
		<div class="col-sm-10">
		  <input type="text" class="form-control" id="vnr" placeholder="Valstybiniai numeriai">
		</div>
	  </div>
	  <div class="form-group row">
		<label for="pagaminimo_metai" class="col-sm-2 col-form-label">Pagaminimo metai: </label>
		<div class="col-sm-10">
		  <input type="number" class="form-control" id="vnr" placeholder="Pagaminimo metai">
		</div>
	  </div>  

	  <div class="form-group row">
		<label for="automobilio_busena" class="col-sm-2 col-form-label">Automobilio busena: </label>
		<div class="col-sm-10">
			<select id="busena" class="form-control">
				<option selected>Pasirinkite...</option>					
					<option value="1">Laisvas</option>
					<option value="2">Naudojamas</option>			
					<option value="3">Remontuojamas</option>							
		  </select>
		</div>
	  </div>

	  <div class="form-group row">
		<label for="pavaru_deze" class="col-sm-2 col-form-label">Pavaru deže</label>
		<div class="col-sm-10">
			<select id="pavaruDeze" class="form-control">
				<option selected>Pasirinkite...</option>					
				<option value="1">Automatine</option>
				<option value="2">Mechanine</option>			
		  </select>
		</div>
	   </div>

		<div class="form-group row">
