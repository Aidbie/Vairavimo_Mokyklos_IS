		<div class="col-sm-10">
			<select id="filialas" class="form-control">
				<option selected>Pasirinkite...</option>					
				<option value="1">Kauno</option>
				<option value="2">Vilniaus</option>			
		  </select>
		</div>
	  </div>
	  
	  <div class="form-group row">
		<div class="col-sm-10">
		  <button type="submit" class="btn btn-primary">Prideti</button>
		</div>
	  </div>
	</form>

{% endblock %}
